!!!
%html{html_attrs}
  %head
    %meta{:'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => 'lang', :content => 'en'}
    %title PriceBitcoin.com
    %link{:href=>'/stylesheets/application.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css'}
    - if settings.production?
      %script{:type => 'text/javascript', :src => '/javascripts/lib/jquery-2.0.0.min.js'}
      %script{:type => 'text/javascript', :src => '/javascripts/lib/modernizr-2.6.custom.min.js'}
    -else
      %script{:type => 'text/javascript', :src => '/javascripts/lib/jquery-2.0.0.js'}
      %script{:type => 'text/javascript', :src => '/javascripts/lib/modernizr-2.6.js'}
    %script{:type => 'text/javascript', :src => '/javascripts/application.js'}
    
  %body
    = partial :_nav_main
    = yield
    = partial :_analytics
